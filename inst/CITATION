citHeader("To cite RamanMP in publications use:")

citEntry(entry = "Article",
  title        = "Raman spectroscopy for the analysis of microplastics in aquatic systems",
  author       = personList(as.person("Veronica Nava"),
                   as.person("Maria Luce Frezzotti"),
                   as.person("Barbara Leoni")),
  journal      = "Applied Spectroscopy",
  year         = "2021",
  volume       = "",
  number       = "",
  pages        = "",
  url          = "",

  textVersion  =
  paste("Nava, V., Frezzotti, M. L., Leoni, B. (2021).",
        "Raman spectroscopy for the analysis of microplastics in aquatic systems.",
        "Applied Spectroscopy.")
)

citHeader("To use the database cite:")

